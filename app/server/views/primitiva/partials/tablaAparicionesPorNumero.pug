div.table-responsive(style="margin-top: 15px", ng-if="mostrar.tablaAparicionesPorNumero", ng-cloak)
    table.table.table-bordered.col-md-12.col-sm-12.col-xs-12
        thead
            tr
                th
                    a.columnaOrdenable(ng-click="ordenarAparicionesPorNumeroSegun('number'); consultarEstandar()", ng-bind-template="NÃºmero", style="padding-right: 15px")
                    span(ng-if="criterioOrdenacionAparicionesPorNumero === 'number' && !ordenAparicionesPorNumero").fa.fa-caret-up
                    span(ng-if="criterioOrdenacionAparicionesPorNumero === 'number' && ordenAparicionesPorNumero").fa.fa-caret-down
                th
                    a.columnaOrdenable(ng-click="ordenarAparicionesPorNumeroSegun('occurrences'); consultarEstandar()", ng-bind-template="Apariciones", style="padding-right: 15px")
                    span(ng-if="criterioOrdenacionAparicionesPorNumero == 'occurrences' && ordenAparicionesPorNumero").fa.fa-caret-down
                    span(ng-if="criterioOrdenacionAparicionesPorNumero == 'occurrences' && !ordenAparicionesPorNumero").fa.fa-caret-up

        tbody
            tr(ng-repeat="item in aparicionesPorNumero")
                td
                    span.badge.badge-azul(ng-bind-template="{{printNumber(item.numero)}}")
                td(ng-bind-template="{{item.apariciones}}")
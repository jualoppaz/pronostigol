div.table-responsive(style="margin-top: 15px", ng-show="mostrar.tablaAparicionesPorReintegro", ng-cloak)
    table.table.table-bordered.col-md-12.col-sm-12.col-xs-12
        thead
            tr
                th
                    a.columnaOrdenable(ng-click="ordenarAparicionesPorReintegroSegun('reintegro')", ng-bind-template="Reintegro", style="padding-right: 15px")
                    span(ng-show="criterioOrdenacionAparicionesPorReintegro == sortFunction_reimbursement && !ordenAparicionesPorReintegro").fa.fa-caret-up
                    span(ng-show="criterioOrdenacionAparicionesPorReintegro == sortFunction_reimbursement && ordenAparicionesPorReintegro").fa.fa-caret-down
                th
                    a.columnaOrdenable(ng-click="ordenarAparicionesPorReintegroSegun('apariciones')", ng-bind-template="Apariciones", style="padding-right: 15px")
                    span(ng-show="criterioOrdenacionAparicionesPorReintegro == 'apariciones' && ordenAparicionesPorReintegro").fa.fa-caret-down
                    span(ng-show="criterioOrdenacionAparicionesPorReintegro == 'apariciones' && !ordenAparicionesPorReintegro").fa.fa-caret-up


        tbody
            tr(ng-repeat="item in numerosReintegros | orderBy:[criterioOrdenacionAparicionesPorReintegro, criterioAlternativoOrdenacionAparicionesPorReintegro]:ordenAparicionesPorReintegro")
                td(ng-show="criterioOrdenacionAparicionesPorReintegro == 'apariciones' && $index >=1 && ordenAparicionesPorReintegro", ng-cloak)
                    span.badge.badge-rojo(ng-bind-template="{{item}}")
                td(ng-show="criterioOrdenacionAparicionesPorReintegro == 'apariciones' && $index == 0 && ordenAparicionesPorReintegro", ng-cloak)
                    span.badge.badge-verde(ng-bind-template="{{item}}")
                td(ng-show="criterioOrdenacionAparicionesPorReintegro == 'apariciones' && $index <9 && !ordenAparicionesPorReintegro", ng-cloak)
                    span.badge.badge-rojo(ng-bind-template="{{item}}")
                td(ng-show="criterioOrdenacionAparicionesPorReintegro == 'apariciones' && $index == 9 && !ordenAparicionesPorReintegro", ng-cloak)
                    span.badge.badge-verde(ng-bind-template="{{item}}")
                td(ng-show="criterioOrdenacionAparicionesPorReintegro == sortFunction_reimbursement", ng-cloak, ng-bind-template="{{item}}")
                td(ng-bind-template="{{getOccurrencesByReimbursement(item)}}")



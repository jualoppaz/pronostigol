extends partials/layout

block head
    title Emails

block content
    div(data-ng-app="dashboard")
        div
            include partials/navbar
        div.container-fluid
            div.row
                include partials/sidebar
                div.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.col-xs-12.main
                    h1.page-header(style="padding-top: 0px") Correos electr√≥nicos
                    div.col-md-12.col-sm-12(data-ng-controller="EmailsController")
                        table.table
                            thead
                                tr
                                    th Eliminar
                                    th Remitente
                                    th Fecha
                                    th Mensaje
                            tbody(data-ng-repeat="email in emails")
                                tr(data-ng-show="email.leido == false", data-ng-cloak).verEmail
                                    td(style="font-weight: bold")
                                        span(data-ng-click="eliminarEmail(email._id)")
                                            i.fa.fa-trash-o
                                    td(style="font-weight: bold", data-ng-click="verEmail(email._id)", data-ng-bind-template="{{email.nombre}} ({{email.direccion}})")
                                    td(style="font-weight: bold", data-ng-click="verEmail(email._id)", data-ng-bind-template="{{email.fecha | date:'dd/MM/yyyy'}}")
                                    td(style="font-weight: bold; text-overflow: hidden !important", data-ng-click="verEmail(email._id)", data-ng-bind-template="{{email.mensaje}}").mensajeEmail
                                tr(data-ng-show="email.leido == true", data-ng-cloak).verEmail
                                    td
                                        span(data-ng-click="eliminarEmail(email._id)")
                                            i.fa.fa-trash-o
                                    td(data-ng-click="verEmail(email._id)", data-ng-bind-template="{{email.nombre}} ({{email.direccion}})")
                                    td(data-ng-click="verEmail(email._id)", data-ng-bind-template="{{email.fecha | date:'dd/MM/yyyy'}}")
                                    td.mensajeEmail(data-ng-click="verEmail(email._id)", data-ng-bind-template="{{email.mensaje}}")

                        include ../modals/eliminarRegistro




block scripts
    script(src="/js/jquery.js")
    script(src="/js/bootstrap.js")
    script(src="/js/angular.js")
    script(src='/js/angular/admin/dashboard.js')
    script(src="/js/angular/admin/emails.js")
    script(src="/js/angular/admin/navbar.js")
    script(src="/js/angular/admin/sidebar.js")
    script(src='/js/angular/ui-bootstrap-tpls-1.3.3.js')

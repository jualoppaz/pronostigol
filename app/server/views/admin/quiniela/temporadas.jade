extends ../partials/layout

block head
    title Temporadas

block content
    div(ng-app="dashboard")
        div
            include ../partials/navbar
        div.container-fluid
            div.row
                include ../partials/sidebar
                div.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
                    h1.page-header(style="padding-top: 0px") Temporadas
                    div.col-md-12.col-sm-12(ng-controller="TemporadasController")
                        div.col-md-12(style="padding-bottom: 15px")
                            div.pull-left
                                i.fa.fa-plus-circle(style="color: green; font-size: 22px")
                            div.pull-left(style="padding-left: 5px")
                                a(href="/admin/quiniela/anadirTemporada").mlp-anadirNoticia AÃ±adir temporada


                        table.table(ng-cloak)
                            thead
                                tr
                                    th Eliminar
                                    th Valor
                            tbody(ng-repeat="registro in temporadas | orderBy: 'name'")
                                tr(ng-cloak).verEmail
                                    td
                                        span(ng-click="eliminarRegistro(registro._id)")
                                            i.fa.fa-trash-o
                                    td(ng-click="verRegistro(registro._id)", ng-bind-template="{{registro.name}}")




                        include ../../modals/eliminarRegistro




block scripts
    script(src="/js/jquery.js")
    script(src="/js/bootstrap.js")
    script(src="/js/angular.js")
    script(src='/js/angular/admin/dashboard.js')
    script(src="/js/angular/admin/quiniela/temporadas.js")
    script(src="/js/angular/admin/navbar.js")
    script(src="/js/angular/admin/sidebar.js")
    script(src='/js/angular/ui-bootstrap-tpls-0.11.2.js')

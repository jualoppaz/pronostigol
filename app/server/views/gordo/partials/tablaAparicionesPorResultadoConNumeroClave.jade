div.table-responsive(style="margin-top: 15px", ng-show="mostrar.tablaAparicionesPorResultadoConNumeroClave", ng-cloak)
    table.table.table-bordered.col-md-12.col-sm-12.col-xs-12
        thead
            tr
                th
                    a.columnaOrdenable(ng-click="ordenarAparicionesPorResultadoConNumeroClaveSegun('resultadoString')", ng-bind-template="Resultado", style="padding-right: 15px")
                    span(ng-show="criterioOrdenacionAparicionesPorResultadoConNumeroClave == 'resultadoString' && !ordenAparicionesPorResultadoConNumeroClave").fa.fa-caret-up
                    span(ng-show="criterioOrdenacionAparicionesPorResultadoConNumeroClave == 'resultadoString' && ordenAparicionesPorResultadoConNumeroClave").fa.fa-caret-down
                th
                    a.columnaOrdenable(ng-click="ordenarAparicionesPorResultadoConNumeroClaveSegun('apariciones')", ng-bind-template="Apariciones", style="padding-right: 15px")
                    span(ng-show="criterioOrdenacionAparicionesPorResultadoConNumeroClave == 'apariciones' && ordenAparicionesPorResultadoConNumeroClave").fa.fa-caret-down
                    span(ng-show="criterioOrdenacionAparicionesPorResultadoConNumeroClave == 'apariciones' && !ordenAparicionesPorResultadoConNumeroClave").fa.fa-caret-up


        tbody

            tr(ng-repeat="item in aparicionesPorResultadoConNumeroClave | orderBy:[criterioOrdenacionAparicionesPorResultadoConNumeroClave, criterioAlternativoOrdenacionAparicionesPorResultadoConNumeroClave]:ordenAparicionesPorResultadoConNumeroClave")
                td(ng-show="criterioOrdenacionAparicionesPorResultadoConNumeroClave == 'resultadoString'")
                    span.badge.badge-azul(ng-repeat="numero in item.numeros", ng-bind-template="{{numero.numero}}")
                    span.badge.badge-azul(style="margin-left: 15px", ng-bind-template="R: {{item.numeroClave}}")
                td(ng-show="criterioOrdenacionAparicionesPorResultadoConNumeroClave == 'apariciones' && $index == (aparicionesPorResultadoConNumeroClave.length - 1) && !ordenAparicionesPorResultadoConNumeroClave")
                    span.badge.badge-verde(ng-repeat="numero in item.numeros", ng-bind-template="{{numero.numero}}")
                    span.badge.badge-verde(style="margin-left: 15px", ng-bind-template="R: {{item.numeroClave}}")
                td(ng-show="criterioOrdenacionAparicionesPorResultadoConNumeroClave == 'apariciones' && $index != (aparicionesPorResultadoConNumeroClave.length - 1) && !ordenAparicionesPorResultadoConNumeroClave")
                    span.badge.badge-rojo(ng-repeat="numero in item.numeros", ng-bind-template="{{numero.numero}}")
                    span.badge.badge-rojo(style="margin-left: 15px", ng-bind-template="R: {{item.numeroClave}}")
                td(ng-show="criterioOrdenacionAparicionesPorResultadoConNumeroClave == 'apariciones' && $index == 0 && ordenAparicionesPorResultadoConNumeroClave")
                    span.badge.badge-verde(ng-repeat="numero in item.numeros", ng-bind-template="{{numero.numero}}")
                    span.badge.badge-verde(style="margin-left: 15px", ng-bind-template="R: {{item.numeroClave}}")
                td(ng-show="criterioOrdenacionAparicionesPorResultadoConNumeroClave == 'apariciones' && $index != 0 && ordenAparicionesPorResultadoConNumeroClave")
                    span.badge.badge-rojo(ng-repeat="numero in item.numeros", ng-bind-template="{{numero.numero}}")
                    span.badge.badge-rojo(style="margin-left: 15px", ng-bind-template="R: {{item.numeroClave}}")


                td(ng-bind-template="{{item.apariciones}}")




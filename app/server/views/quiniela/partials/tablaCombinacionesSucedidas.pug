div.table-responsive(style="margin-top: 15px", ng-if="mostrarCombinacionesSucedidas", ng-cloak)
    table.table.table-bordered.col-md-12.col-sm-12.col-xs-12
        thead
            tr
                th
                th(ng-bind-template="Resultado")
                th(ng-bind-template="Apariciones")

        tbody
            tr(ng-repeat="combinacion in resultadosSucedidos | orderBy:'value'")
                td(ng-bind-template="{{$index+1}}")
                td
                    span.badge.badge-azul(ng-repeat="resultado in combinacion.resultados", ng-bind-template="{{resultado.resultado}}")
                td(ng-bind-template="{{combinacion.apariciones}}")

                    span.badge.badge-verde(data-ng-bind-template="{{sumaDeEmpates()}}")
                // Empate mas frecuente empatado con 1
                td(data-ng-if="situacionDelPrimero(sumaDeEmpates(), sumaDeVictoriasLocales(), sumaDeVictoriasVisitantes()) == 'mayorCompartido'")

div.table-responsive(data-ng-if="mostrar", data-ng-cloak)
    table.table.table-bordered.col-xs-12
        thead
            tr
                th Fila
                th Victorias locales
                th Empates
                th Victorias visitantes
                th Número de partidos
        tbody
            tr(data-ng-repeat="fila in filas | orderBy: 'fila'")
                td(data-ng-bind-template="{{fila.fila}}")
                // Victoria local mas frecuente en solitario
                td(data-ng-if="situacionDelPrimero(fila.victoriasLocales, fila.empates, fila.victoriasVisitantes) == 'mayorEnSolitario'")
                    span.badge.badge-verde(data-ng-bind-template="{{fila.victoriasLocales || 0}}")
                // Victoria local es el mas frecuente empatada con otro
                td(data-ng-if="situacionDelPrimero(fila.victoriasLocales, fila.empates, fila.victoriasVisitantes) == 'mayorCompartido'")
                    span.badge.badge-naranja(data-ng-bind-template="{{fila.victoriasLocales || 0}}")
                // Está en medio
                td(data-ng-if="situacionDelPrimero(fila.victoriasLocales, fila.empates, fila.victoriasVisitantes) == 'intermedio'")
                    span.badge.badge-rojo(data-ng-bind-template="{{fila.victoriasLocales || 0}}")
                // Victoria local es el menos frecuente en solitario
                td(data-ng-if="situacionDelPrimero(fila.victoriasLocales, fila.empates, fila.victoriasVisitantes) == 'menorEnSolitario'")
                    span.badge.badge-rojo(data-ng-bind-template="{{fila.victoriasLocales || 0}}")
                // Victoria local es el menos frecuente empatado con 1
                td(data-ng-if="situacionDelPrimero(fila.victoriasLocales, fila.empates, fila.victoriasVisitantes) == 'menorCompartido'")
                    span.badge.badge-rojo(data-ng-bind-template="{{fila.victoriasLocales || 0}}")
                // Triple empate a todo
                td(data-ng-if="situacionDelPrimero(fila.victoriasLocales, fila.empates, fila.victoriasVisitantes) == 'igualados'")
                    span.badge.badge-naranja(data-ng-bind-template="{{fila.victoriasLocales || 0}}")

                // Empate mas frecuente en solitario
                td(data-ng-if="situacionDelPrimero(fila.empates,fila.victoriasLocales, fila.victoriasVisitantes) == 'mayorEnSolitario'")
                    span.badge.badge-verde(data-ng-bind-template="{{fila.empates || 0}}")
                // Empate mas frecuente empatado con 1
                td(data-ng-if="situacionDelPrimero(fila.empates,fila.victoriasLocales, fila.victoriasVisitantes) == 'mayorCompartido'")
                    span.badge.badge-naranja(data-ng-bind-template="{{fila.empates || 0}}")
                // Está en medio
                td(data-ng-if="situacionDelPrimero(fila.empates,fila.victoriasLocales, fila.victoriasVisitantes) == 'intermedio'")
                    span.badge.badge-rojo(data-ng-bind-template="{{fila.empates || 0}}")
                // Empate menos frecuente en solitario
                td(data-ng-if="situacionDelPrimero(fila.empates,fila.victoriasLocales, fila.victoriasVisitantes) == 'menorEnSolitario'")
                    span.badge.badge-rojo(data-ng-bind-template="{{fila.empates || 0}}")
                // Empate menos frecuente empatado con 1
                td(data-ng-if="situacionDelPrimero(fila.empates,fila.victoriasLocales, fila.victoriasVisitantes) == 'menorCompartido'")
                    span.badge.badge-rojo(data-ng-bind-template="{{fila.empates || 0}}")
                // Triple empate a todo
                td(data-ng-if="situacionDelPrimero(fila.empates,fila.victoriasLocales, fila.victoriasVisitantes) == 'igualados'")
                    span.badge.badge-naranja(data-ng-bind-template="{{fila.empates || 0}}")

                // Victoria visitante mas frecuente
                td(data-ng-if="situacionDelPrimero(fila.victoriasVisitantes,fila.empates, fila.victoriasLocales) == 'mayorEnSolitario'")
                    span.badge.badge-verde(data-ng-bind-template="{{fila.victoriasVisitantes || 0}}")
                // Victoria visitante mas frecuente empatado con 1
                td(data-ng-if="situacionDelPrimero(fila.victoriasVisitantes,fila.empates, fila.victoriasLocales) == 'mayorCompartido'")
                    span.badge.badge-naranja(data-ng-bind-template="{{fila.victoriasVisitantes || 0}}")
                // Está en medio
                td(data-ng-if="situacionDelPrimero(fila.victoriasVisitantes,fila.victoriasLocales, fila.empates) == 'intermedio'")
                    span.badge.badge-rojo(data-ng-bind-template="{{fila.victoriasVisitantes || 0}}")
                // Victoria visitante menos frecuente en solitario
                td(data-ng-if="situacionDelPrimero(fila.victoriasVisitantes,fila.victoriasLocales, fila.empates) == 'menorEnSolitario'")
                    span.badge.badge-rojo(data-ng-bind-template="{{fila.victoriasVisitantes || 0}}")
                // Victoria visitante menos frecuente empatado con 1
                td(data-ng-if="situacionDelPrimero(fila.victoriasVisitantes,fila.victoriasLocales, fila.empates) == 'menorCompartido'")
                    span.badge.badge-rojo(data-ng-bind-template="{{fila.victoriasVisitantes || 0}}")
                // Triple empate a todo
                td(data-ng-if="situacionDelPrimero(fila.victoriasVisitantes,fila.victoriasLocales, fila.empates) == 'igualados'")
                    span.badge.badge-naranja(data-ng-bind-template="{{fila.victoriasVisitantes || 0}}")


                td(data-ng-bind-template="{{fila.victoriasLocales + fila.empates + fila.victoriasVisitantes || 0}}")


            tr
                td
                    strong(data-ng-bind-template="Total")

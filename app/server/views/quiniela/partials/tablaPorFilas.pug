                // Está en medio
                td(data-ng-if="situacionDelPrimero(sumaDeEmpates(), sumaDeVictoriasLocales(), sumaDeVictoriasVisitantes()) == 'intermedio'")
                    span.badge.badge-rojo(data-ng-bind-template="{{sumaDeEmpates()}}")
                // Empate menos frecuente en solitario
                td(data-ng-if="situacionDelPrimero(sumaDeEmpates(), sumaDeVictoriasLocales(), sumaDeVictoriasVisitantes()) == 'menorEnSolitario'")
                    span.badge.badge-rojo(data-ng-bind-template="{{sumaDeEmpates()}}")
                // Empate menos frecuente empatado con 1
                td(data-ng-if="situacionDelPrimero(sumaDeEmpates(), sumaDeVictoriasLocales(), sumaDeVictoriasVisitantes()) == 'menorCompartido'")
                    span.badge.badge-rojo(data-ng-bind-template="{{sumaDeEmpates()}}")
                // Triple empate a todo
                td(data-ng-if="situacionDelPrimero(sumaDeEmpates(), sumaDeVictoriasLocales(), sumaDeVictoriasVisitantes()) == 'igualados'")
                    span.badge.badge-naranja(data-ng-bind-template="{{sumaDeEmpates()}}")

                // Victoria visitante mas frecuente
                td(data-ng-if="situacionDelPrimero(sumaDeVictoriasVisitantes(), sumaDeEmpates(), sumaDeVictoriasLocales()) == 'mayorEnSolitario'")
                    span.badge.badge-verde(data-ng-bind-template="{{sumaDeVictoriasVisitantes()}}")
                // Victoria visitante mas frecuente empatado con 1
                td(data-ng-if="situacionDelPrimero(sumaDeVictoriasVisitantes(), sumaDeEmpates(), sumaDeVictoriasLocales()) == 'mayorCompartido'")
                    span.badge.badge-naranja(data-ng-bind-template="{{sumaDeVictoriasVisitantes()}}")
                // Está en medio
                td(data-ng-if="situacionDelPrimero(sumaDeVictoriasVisitantes(), sumaDeEmpates(), sumaDeVictoriasLocales()) == 'intermedio'")
                    span.badge.badge-rojo(data-ng-bind-template="{{sumaDeVictoriasVisitantes()}}")
                // Victoria visitante menos frecuente en solitario
                td(data-ng-if="situacionDelPrimero(sumaDeVictoriasVisitantes(), sumaDeEmpates(), sumaDeVictoriasLocales()) == 'menorEnSolitario'")
                    span.badge.badge-rojo(data-ng-bind-template="{{sumaDeVictoriasVisitantes()}}")

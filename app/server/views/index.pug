                include partials/navbar

                div(style="padding: 0 0 0 0")

                    main.container-fluid
                        div.row.text-center
                            span.col-sm-8.col-sm-offset-2.col-xs-12.logo-pronostigol
                                h1.titulo-logo-pronostigol Pronostigol

                        ul.list-inline.row.text-center
                            li.col-md-2.col-md-offset-1.col-sm-6.col-xs-12
                                a#link-quiniela(href="/quiniela", title="Quiniela")
                                    span.logo.logo-quiniela(title="Quiniela") Q
                            li.col-md-2.col-sm-6.col-xs-12
                                a#link-bonoloto(href="/bonoloto", title="Bonoloto")
                                    span.logo.logo-bonoloto(title="Bonoloto") B
                            li.col-md-2.col-sm-6.col-xs-12
                                a#link-primitiva(href="/primitiva", title="La Primitiva")
                                    span.logo.logo-primitiva(title="Primitiva") P
                            li.col-md-2.col-sm-6.col-xs-12
                                a#link-gordo(href="/gordo", title="El Gordo de la Primitiva")
                                    span.logo.logo-gordo(title="El Gordo de la Primitiva") G
                            li.col-md-2.col-md-offset-0.col-sm-6.col-sm-offset-3.col-xs-12(style="")
                                a#link-euromillones(href="/euromillones", title="Euromillones")
                                    span.logo.logo-euromillones(title="Euromillones") E

                        div.row
                            div.col-md-10.col-md-offset-1.col-xs-12(style="margin-top: 20px; padding-left: 0px; padding-right: 0px")
                                div.col-xs-12.panel.panel-body.border-qdb
                                    div.main-card-content(style="word-wrap: break-word;")
                                        div.main-card-name
                                            span.caramelo.qdb-red Bienvenido
                                        div.main-card-description

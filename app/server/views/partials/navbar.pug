header(data-ng-controller="NavbarController")
    nav.navbar.navbar-fixed-top.navbar-default.navbar-qdb.fondoAzul
        div.navbar-inner
            div.container-fluid
                div.navbar-header
                    button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target=".navbar-collapse")
                        span.sr-only Cambiar la navegación
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a(href="/", title="Inicio").navbar-brand.white.middle Inicio
                    ul.nav.navbar-nav.navbar-right.hidden-lg.hidden-md.hidden-sm
                        li(style="float: right; padding-right: 15px")
                            a(href="https://github.com/jualoppaz/pronostigol", title="Repositorio en GitHub", target="_blank", data-ng-cloak)
                                i.fa.fa-github
                        li(style="float: right")
                            a(href="https://twitter.com/pronostigolesp", title="Cuenta de Twitter", target="_blank", data-ng-cloak)
                                i.fa.fa-twitter
                        li(style="float: right")
                            a(href="https://www.facebook.com/pronostigol.es", title="Página de Facebook", target="_blank", data-ng-cloak)
                                i.fa.fa-facebook
                div.collapse.navbar-collapse.fondoAzul(role="navigation")
                    ul.nav.navbar-nav
                        li
                            a(href="/contacto", title="Contacto") Contacto
                        li.hidden-lg.hidden-md.hidden-sm(data-ng-show="usuarioEstaLogueado == false")
                            a.btn-login(href="/login", title="Entrar") Entrar
                        li.hidden-lg.hidden-md.hidden-sm(data-ng-show="usuarioEstaLogueado")
                            a(href="#", title="Cerrar sesión", data-ng-click="cerrarSesion()") Cerrar sesión
                        li.hidden-lg.hidden-md.hidden-sm(data-ng-show="usuarioEstaLogueado == false")
                            a(href="/signup", title="Registrarse") Registrarse

                    ul.nav.navbar-nav.navbar-right.hidden-xs
                        li
                            a(href="https://www.facebook.com/pronostigol.es", title="Página de Facebook", target="_blank", data-ng-cloak)
                                i.fa.fa-facebook
                        li
                            a(href="https://twitter.com/pronostigolesp", title="Cuenta de Twitter", target="_blank", data-ng-cloak)
                                i.fa.fa-twitter
                        li
                            a(href="https://github.com/jualoppaz/pronostigol", title="Repositorio en GitHub", target="_blank", data-ng-cloak)
                                i.fa.fa-github
                        li(data-ng-show="usuarioEstaLogueado", style="margin-left:15px", data-ng-cloak)
                            a.btn.btn-qdb.btn-login(href="#", title="Cerrar sesión", role="button", data-ng-click="cerrarSesion()") Cerrar sesión
                        li(data-ng-show="!usuarioEstaLogueado", style="margin-left:15px", data-ng-cloak)
                            a.btn.btn-qdb.btn-login(href="/login", title="Entrar", role="button") Entrar

div.table-responsive(style="margin-top: 15px", ng-if="mostrar.tablaAparicionesPorResultadoConEstrellas", ng-cloak)
    table.table.table-bordered.col-md-12.col-sm-12.col-xs-12
        thead
            tr
                th
                    a.columnaOrdenable(ng-click="ordenarAparicionesPorResultadoConEstrellasSegun('resultado'); consultarEstandar()", ng-bind-template="Resultado", style="padding-right: 15px")
                    span(ng-if="criterioOrdenacionAparicionesPorResultadoConEstrellas == 'resultado' && !ordenAparicionesPorResultadoConEstrellas").fa.fa-caret-up
                    span(ng-if="criterioOrdenacionAparicionesPorResultadoConEstrellas == 'resultado' && ordenAparicionesPorResultadoConEstrellas").fa.fa-caret-down
                th
                    a.columnaOrdenable(ng-click="ordenarAparicionesPorResultadoConEstrellasSegun('apariciones'); consultarEstandar()", ng-bind-template="Apariciones", style="padding-right: 15px")
                    span(ng-if="criterioOrdenacionAparicionesPorResultadoConEstrellas == 'apariciones' && ordenAparicionesPorResultadoConEstrellas").fa.fa-caret-down
                    span(ng-if="criterioOrdenacionAparicionesPorResultadoConEstrellas == 'apariciones' && !ordenAparicionesPorResultadoConEstrellas").fa.fa-caret-up

        tbody
            tr(ng-repeat="item in aparicionesPorResultadoConEstrellas")
                td
                    span.badge.badge-azul(ng-repeat="numero in item.resultado", ng-bind-template="{{printNumber(numero.numero)}}")
                    span.badge.badge-azul(ng-repeat="estrella in item.estrellas", ng-bind-template="E: {{printNumber(estrella.numero)}}")
                td(ng-bind-template="{{item.apariciones}}")
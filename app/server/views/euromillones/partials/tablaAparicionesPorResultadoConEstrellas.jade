div.table-responsive(style="margin-top: 15px", ng-show="mostrar.tablaAparicionesPorResultadoConEstrellas", ng-cloak)
    table.table.table-bordered.col-md-12.col-sm-12.col-xs-12
        thead
            tr
                th
                    a.columnaOrdenable(ng-click="ordenarAparicionesPorResultadoConEstrellasSegun('resultadoString')", ng-bind-template="Resultado", style="padding-right: 15px")
                    span(ng-show="criterioOrdenacionAparicionesPorResultadoConEstrellas == 'resultadoString' && !ordenAparicionesPorResultadoConEstrellas").fa.fa-caret-up
                    span(ng-show="criterioOrdenacionAparicionesPorResultadoConEstrellas == 'resultadoString' && ordenAparicionesPorResultadoConEstrellas").fa.fa-caret-down
                th
                    a.columnaOrdenable(ng-click="ordenarAparicionesPorResultadoConEstrellasSegun('apariciones')", ng-bind-template="Apariciones", style="padding-right: 15px")
                    span(ng-show="criterioOrdenacionAparicionesPorResultadoConEstrellas == 'apariciones' && ordenAparicionesPorResultadoConEstrellas").fa.fa-caret-down
                    span(ng-show="criterioOrdenacionAparicionesPorResultadoConEstrellas == 'apariciones' && !ordenAparicionesPorResultadoConEstrellas").fa.fa-caret-up


        tbody
            // Implementacion anterior
            //tr(ng-repeat="(key, value) in aparicionesPorNumero | orderBy:criterioOrdenacionAparicionesPorNumero:ordenAparicionesPorNumero")
                td(ng-bind-template="{{key}}")
                td(ng-bind-template="{{value}}")

            tr(ng-repeat="item in aparicionesPorResultadoConEstrellas | orderBy:[criterioOrdenacionAparicionesPorResultadoConEstrellas, criterioAlternativoOrdenacionAparicionesPorResultadoConEstrellas]:ordenAparicionesPorResultadoConEstrellas")
                td(ng-show="criterioOrdenacionAparicionesPorResultadoConEstrellas == 'resultadoString'")
                    span.badge.badge-azul(ng-repeat="numero in item.numeros", ng-bind-template="{{numero.numero}}")
                    span.badge.badge-azul(ng-repeat="estrella in item.estrellas", ng-bind-template="E: {{estrella.numero}}")
                td(ng-show="criterioOrdenacionAparicionesPorResultadoConEstrellas == 'apariciones' && $index == (aparicionesPorResultado.length - 1) && !ordenAparicionesPorResultado")
                    span.badge.badge-verde(ng-repeat="numero in item.numeros", ng-bind-template="{{numero.numero}}")
                    span.badge.badge-verde(ng-repeat="estrella in item.estrellas", ng-bind-template="E: {{estrella.numero}}")
                td(ng-show="criterioOrdenacionAparicionesPorResultadoConEstrellas == 'apariciones' && $index != (aparicionesPorResultado.length - 1) && !ordenAparicionesPorResultado")
                    span.badge.badge-rojo(ng-repeat="numero in item.numeros", ng-bind-template="{{numero.numero}}")
                    span.badge.badge-rojo(ng-repeat="estrella in item.estrellas", ng-bind-template="E: {{estrella.numero}}")
                td(ng-show="criterioOrdenacionAparicionesPorResultadoConEstrellas == 'apariciones' && $index == 0 && ordenAparicionesPorResultado")
                    span.badge.badge-verde(ng-repeat="numero in item.numeros", ng-bind-template="{{numero.numero}}")
                    span.badge.badge-verde(ng-repeat="estrella in item.estrellas", ng-bind-template="E: {{estrella.numero}}")
                td(ng-show="criterioOrdenacionAparicionesPorResultadoConEstrellas == 'apariciones' && $index != 0 && ordenAparicionesPorResultado")
                    span.badge.badge-rojo(ng-repeat="numero in item.numeros", ng-bind-template="{{numero.numero}}")
                    span.badge.badge-rojo(ng-repeat="estrella in item.estrellas", ng-bind-template="E: {{estrella.numero}}")

                td(ng-bind-template="{{item.apariciones}}")




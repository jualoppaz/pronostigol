extends ../layout

block head
    title Euromillones | Consulta de estadísticas de Euromillones
    meta(name="description", content="Euromillones. Consulta de estadísticas de Euromillones")  
    link(rel="stylesheet", href="/css/backgroundImage.css")
    link(rel="stylesheet", href="/css/pronostigol.css")

block content
    div#wrap(ng-app="qdb")

        div.container(ng-controller="LoguedUserController")
            div(ng-controller="ConsultasController")

                include partials/navbar

                div.col-md-12.col-sm-12.col-xs-12(style="padding: 0 0 0 0")

                    div.col-md-12.col-sm-12.col-xs-12(ng-cloak, style="margin-top:15px; padding-left: 0px; padding-right: 0px")
                        div.alert.alert-euromillones.
                            Aqu&iacute; podr&aacute;s realizar todo tipo de consultas, de modo que
                            podr&aacute;s saber cu&aacute;les son los n&uacute;meros o los reintegros que
                            se han dado en m&aacute;s ocasiones. As&iacute; podr&aacute;s realizar
                            tus apuestas con mayor criterio.


                    div.col-md-12.col-md-offset-0.col-sm-12.col-xs-12(style="margin-top:20px; padding: 0 0 0 0; background-color: white; border: 2px solid #440044; border-radius: 4px", ng-cloak)

                        tabset.col-md-12.col-sm-12.col-xs-12(style="padding: 0 0 0 0;", ng-cloak)
                            tab.col-md-12.col-sm-12.col-xs-12(style="padding: 0 0 0 0", heading="Estándar", active="segundaPestana", ng-click="activarPestana(2)")

                                div.col-md-12.col-sm-12.col-xs-12(style="border-right: 1px solid #ddd; border-bottom: 1px solid #ddd; border-left: 1px solid #ddd;")
                                    div.col-md-12.col-sm-12.col-xs-12(style="padding: 0 0 0 0; margin-top: 15px").form-group
                                        div.col-md-12.form-group


                                            label.col-md-5.col-md-offset-2.col-sm-12.col-xs-12
                                                //input(type="radio", name="optionsRadiosEstandar", value="combinacionesSucedidas", ng-checked="true", ng-model="form.opcionBusquedaEstandar")#radio1Estandar
                                                //| &nbsp; Apariciones por n&uacute;mero
                                                input(type="radio", value="aparicionesPorNumero", ng-model="form.opcionBusquedaEstandar.name")#radio1Estandar
                                                | &nbsp; Apariciones por N&uacute;mero
                                            div.col-md-5.col-sm-5.hidden-xs
                                                button(uib-popover="{{ayuda.aparicionesPorNumero}}", popover-trigger="mouseenter", popover-placement="right").btn.btn-default.btn-qdb
                                                    | Ayuda
                                            div.hidden-lg.hidden-md.hidden-sm.col-xs-12(style="padding-top: 30px; padding-bottom: 10px")
                                                button(uib-popover="{{ayuda.aparicionesPorNumero}}", popover-trigger="mouseenter", popover-placement="right").btn.btn-default.btn-qdb
                                                    | Ayuda
                                        div.col-md-12.form-group
                                            label.col-md-5.col-md-offset-2.col-sm-12.col-xs-12
                                                input(type="radio", value="aparicionesPorResultado", ng-model="form.opcionBusquedaEstandar.name")#radio2Estandar
                                                | &nbsp; Apariciones por Resultado (Sin Estrellas)
                                            div.col-md-5.col-sm-5.hidden-xs
                                                button(uib-popover="{{ayuda.aparicionesPorResultado}}", popover-trigger="mouseenter", popover-placement="right").btn.btn-default.btn-qdb
                                                    | Ayuda
                                            div.hidden-lg.hidden-md.hidden-sm.col-xs-12(style="padding-top: 30px; padding-bottom: 10px")
                                                button(uib-popover="{{ayuda.aparicionesPorResultado}}", popover-trigger="mouseenter", popover-placement="right").btn.btn-default.btn-qdb
                                                    | Ayuda
                                        div.col-md-12.form-group
                                            label.col-md-5.col-md-offset-2.col-sm-12.col-xs-12
                                                input(type="radio", value="aparicionesPorResultadoConEstrellas", ng-model="form.opcionBusquedaEstandar.name")#radio2Estandar
                                                | &nbsp; Apariciones por Resultado (Con Estrellas)
                                            div.col-md-5.col-sm-5.hidden-xs
                                                button(uib-popover="{{ayuda.aparicionesPorResultadoConEstrellas}}", popover-trigger="mouseenter", popover-placement="right").btn.btn-default.btn-qdb
                                                    | Ayuda
                                            div.hidden-lg.hidden-md.hidden-sm.col-xs-12(style="padding-top: 30px; padding-bottom: 10px")
                                                button(uib-popover="{{ayuda.aparicionesPorResultadoConEstrellas}}", popover-trigger="mouseenter", popover-placement="right").btn.btn-default.btn-qdb
                                                    | Ayuda

                                        div.col-md-12.form-group
                                            label.col-md-5.col-md-offset-2.col-sm-12.col-xs-12
                                                input(type="radio", value="aparicionesPorEstrella", ng-model="form.opcionBusquedaEstandar.name")#radio3Estandar
                                                | &nbsp; Apariciones por Estrellas
                                            div.col-md-5.col-sm-5.hidden-xs
                                                button(uib-popover="{{ayuda.aparicionesPorEstrella}}", popover-trigger="mouseenter", popover-placement="right").btn.btn-default.btn-qdb
                                                    | Ayuda
                                            div.hidden-lg.hidden-md.hidden-sm.col-xs-12(style="padding-top: 30px; padding-bottom: 10px")
                                                button(uib-popover="{{ayuda.aparicionesPorEstrella}}", popover-trigger="mouseenter", popover-placement="right").btn.btn-default.btn-qdb
                                                    | Ayuda

                                        div.col-md-12.form-group
                                            label.col-md-5.col-md-offset-2.col-sm-12.col-xs-12
                                                input(type="radio", value="aparicionesPorParejaDeEstrellas", ng-model="form.opcionBusquedaEstandar.name")#radio3Estandar
                                                | &nbsp; Apariciones por Parejas de Estrellas
                                            div.col-md-5.col-sm-5.hidden-xs
                                                button(uib-popover="{{ayuda.aparicionesPorParejaDeEstrellas}}", popover-trigger="mouseenter", popover-placement="right").btn.btn-default.btn-qdb
                                                    | Ayuda
                                            div.hidden-lg.hidden-md.hidden-sm.col-xs-12(style="padding-top: 30px; padding-bottom: 10px")
                                                button(uib-popover="{{ayuda.aparicionesPorParejaDeEstrellas}}", popover-trigger="mouseenter", popover-placement="right").btn.btn-default.btn-qdb
                                                    | Ayuda



                                    div.col-md-12.col-sm-12.col-xs-12.form-group
                                        div.col-sm-2.col-sm-offset-5.col-xs-12(style="text-align:center")
                                            a.btn.btn-default.btn-qdb.abel(href="#", role="button", ng-click="currentPage = 1; consultarEstandar()", ng-disabled="consultando == true")#confirmarEliminacion Consultar



                                    div.col-md-12.col-sm-12.col-xs-12#panelesEstandar

                                        div.text-center
                                            uib-pagination(ng-show="tickets.length",
                                            ng-change="consultarEstandar()",
                                            ng-cloak,
                                            items-per-page="ticketsPerPage",
                                            boundary-link-numbers="true",
                                            boundary-links="true",
                                            total-items="totalItems",
                                            rotate="true",
                                            max-size="maxSize",
                                            force-ellipses="true",
                                            ng-model="currentPage",
                                            previous-text="<",
                                            next-text=">",
                                            first-text="Inicio",
                                            last-text="Fin").pagination-sm.abel

                                            //pre Tickets per page: {{ticketsPerPage}}

                                            //pre Current page: {{currentPage}}

                                            //pre Total items: {{totalItems}}

                                            //pre Star: {{ticketsPerPage*currentPage - ticketsPerPage}}

                                            //pre End: {{ticketsPerPage*currentPage - 1}}

                                            //pre {{aparicionesPorResultado.slice(ticketsPerPage*currentPage - ticketsPerPage, ticketsPerPage*currentPage - 1)}}

                                            //pre {{::aparicionesPorResultado}}

                                        include partials/tablaAparicionesPorNumero

                                        include partials/tablaAparicionesPorResultado

                                        include partials/tablaAparicionesPorResultadoConEstrellas

                                        include partials/tablaAparicionesPorEstrella

                                        include partials/tablaAparicionesPorParejaDeEstrellas

                    div.col-md-12.col-sm-12.col-xs-12(style="margin-top:50px; margin-bottom: 10px")
                        script(async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js")
                        ins.adsbygoogle(style="display:block", data-ad-client="ca-pub-2309187828170787",
                        data-ad-slot="9496209954", data-ad-format="auto")
                        script (adsbygoogle = window.adsbygoogle || []).push({});

        div#push

    include partials/footer

block scripts
    script(src='/js/jquery.js')
    script(src='/js/bootstrap.js')
    script(src='/js/angular.js')
    script(src='/js/angular/services.js')
    script(src='/js/angular/loguedUser.js')
    script(src='/js/angular/euromillones/consultas.js')
    script(src='/js/angular/navbar.js')
    script(src='/js/angular/ui-bootstrap-tpls-1.3.3.js')
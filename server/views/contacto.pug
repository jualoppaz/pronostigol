extends layout

block head
    title Contacto
    link(rel="canonical", href="https://www.pronostigol.es/contacto")
    link(rel="stylesheet", href="/css/pronostigol.css")


block content
    div#wrap(data-ng-app="qdb")
        div.container(data-ng-controller="LoguedUserController")
            div(data-ng-controller="ContactoController")

                include partials/navbar

                div(style="padding-top: 50px")
                    div.panel.panel-body.border-qdb
                        div.main-card-content
                            div
                                p.recipe-title(style="text-align:center !important; padding-left: 0px")
                                    span.caramelo.qdb-red(style="text-align: center; float:none") Contactar

                            form.form-horizontal(novalidate, data-ng-submit="enviarCorreo()", style="padding: 0 0 0 0").formulario
                                div.form-group
                                    div.col-md-10.col-md-offset-1.col-sm-10.col-sm-offset-1
                                        input(type="text", name="nombre", placeholder="Nombre", data-ng-model="form.nombre").form-control
                                    div.col-md-10.col-md-offset-1.col-sm-10.col-sm-offset-1(data-ng-show="nombreVacio", data-ng-cloak, style="margin-top: 15px")
                                        div.alert.alert-danger(data-ng-bind-template="{{errores.nombreVacio}}")
                                div.form-group
                                    div.col-md-10.col-md-offset-1.col-sm-10.col-sm-offset-1
                                        input(type="email", placeholder="Introduce un email de contacto", data-ng-non-bindable)#email.form-control
                                    div.col-md-10.col-md-offset-1.col-sm-10.col-sm-offset-1(data-ng-show="emailVacio", data-ng-cloak, style="margin-top: 15px")
                                        div.alert.alert-danger(data-ng-bind-template="{{errores.emailVacio}}")
                                    div.col-md-10.col-md-offset-1.col-sm-10.col-sm-offset-1(data-ng-show="emailInvalido && !emailVacio", data-ng-cloak, style="margin-top: 15px")
                                        div.alert.alert-danger(data-ng-bind-template="{{errores.emailInvalido}}")
                                div.form-group
                                    div.col-md-10.col-md-offset-1.col-sm-10.col-sm-offset-1
                                        textarea(placeholder="Introduce tu mensaje", data-ng-model="form.mensaje").form-control
                                    div.col-md-10.col-md-offset-1.col-sm-10.col-sm-offset-1(data-ng-show="mensajeVacio", data-ng-cloak, style="margin-top: 15px")
                                        div.alert.alert-danger(data-ng-bind-template="{{errores.mensajeVacio}}")

                                div.form-group
                                    div.col-md-10.col-md-offset-1.col-sm-10.col-sm-offset-1
                                        div.text-center O si lo prefieres contacta con nosotros directamente en nuestra dirección de correo electrónico:
                                        div.clearfix.text-center
                                            a(style="text-decoration: none") www.pronostigol.es@gmail.com
                                div.form-group
                                    div.col-md-6.col-md-offset-3.col-sm-6.col-sm-offset-3(style="text-align:center; margin-top:15px")
                                        button.btn.btn-default.btn-qdb(href="#", title="Envia", role="button", type="submit")#buscar Enviar


    include partials/footer



block scripts
    script(src='/js/jquery.js')
    script(src='/js/bootstrap.js')
    script(src='/js/angular.js')
    script(src='/js/angular/i18n/angular-locale_es-es.js')
    script(src='/js/angular/services.js')
    script(src='/js/angular/loguedUser.js')
    script(src='/js/angular/contacto.js')
    script(src='/js/angular/navbar.js')
    script(src='/js/angular/ui-bootstrap-tpls-1.3.3.js')
    script(src="/bower_components/angular-ui-carousel/dist/ui-carousel.js")



extends ../partials/layout

block head
    title A単os

block content
    div(data-ng-app="dashboard")
        div
            include ../partials/navbar
        div.container-fluid
            div.row
                include ../partials/sidebar
                div.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.col-xs-12.main
                    h1.page-header(style="padding-top: 0px") A単os
                    div.col-md-12.col-sm-12(data-ng-controller="AnyosController")
                        div.col-md-12(style="padding-bottom: 15px")
                            div.pull-left
                                i.fa.fa-plus-circle(style="color: green; font-size: 22px")
                            div.pull-left(style="padding-left: 5px")
                                a(href="/admin/gordo/anadirAnyo").mlp-anadirNoticia A単adir a単o


                        table.table(data-ng-cloak)
                            thead
                                tr
                                    th Eliminar
                                    th Nombre
                            tbody(data-ng-repeat="registro in anyos | orderBy: 'name'")
                                tr(data-ng-cloak).verEmail
                                    td
                                        span(data-ng-click="eliminarRegistro(registro._id)")
                                            i.fa.fa-trash-o
                                    td(data-ng-click="verRegistro(registro._id)", data-ng-bind-template="{{registro.name}}")




                        include ../../modals/eliminarRegistro




block scripts
    script(src="/js/jquery.js")
    script(src="/js/bootstrap.js")
    script(src="/js/angular.js")
    script(src='/js/angular/i18n/angular-locale_es-es.js')
    script(src='/js/angular/admin/dashboard.js')
    script(src="/js/angular/admin/gordo/anyos.js")
    script(src="/js/angular/admin/navbar.js")
    script(src="/js/angular/admin/sidebar.js")
    script(src='/js/angular/ui-bootstrap-tpls-1.3.3.js')
